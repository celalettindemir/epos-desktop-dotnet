<UserControl x:Class="EposWpf.View.ButtonUC.MainMenuButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EposWpf.View.ButtonUC"
             mc:Ignorable="d"  Padding="10">
    <Button x:Name="MenuButton" Width="200" Height="200" HorizontalContentAlignment="Center" VerticalAlignment="Center">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Image Grid.Row="0" x:Name="ButtonImage" Source="{Binding ImageSource}" />
            <TextBlock Grid.Row="1" Margin="0 4 0 0" HorizontalAlignment="Center" FontSize="18" Text="{Binding ButtonText}"/>
        </Grid>
    </Button>
</UserControl>
